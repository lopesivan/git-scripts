#!/usr/bin/env bash

test -n "$DEBUG" && set -x

# Description:
# ----------------------------------------------------------------------------
# Modo strict
set -euo pipefail
# ----------------------------------------------------------------------------

##############################################################################
##############################################################################
##############################################################################

# ----------------------------------------------------------------------------
# Run!
for f in $(git status --porcelain | grep '^??' | sed 's/^?? //'); do
    test -L "$f" && echo $f   >> .gitignore;
done

# ----------------------------------------------------------------------------
exit 0
